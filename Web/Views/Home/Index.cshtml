                        <div class="tab-pane active" id="timeline">
                            <ul class="timeline timeline-inverse">
                                <!-- start -->
                                <li class="time-label ng-scope">
                                    <span class="bg-light-blue ng-binding">至今</span>
                                </li>
                                @foreach (var item in Model)
                                {
                                    <li class="ng-scope" >
                                        <i class="fa fa-tags bg-blue"></i>
                                        <div class="timeline-item">
                                            <span class="time ng-binding">持续时间:@item.ProjectTime <i class="fa fa-clock-o"></i></span>
                                            <h3 class="timeline-header ng-binding">
                                                <a>项目名称</a> @item.Name
                                            </h3>
                                            <div class="timeline-body">
                                                <p class="text-muted ng-binding">所在公司: @item.Company</p>
                                                <p class="text-muted ng-binding">项目职务: @item.Place</p>
                                                <p class="text-muted ng-binding">项目职责: @item.Duties</p>
                                                <p class="text-muted ng-binding">项目技术: @item.Skill</p>
                                            </div>
                                            <div class="timeline-footer">
                                                <a class="btn btn-primary btn-xs">更多 &gt;&gt;</a>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="ng-scope">
                                        <i class="fa fa-thumb-tack bg-aqua"></i>
                                        <div class="timeline-item">
                                            <span class="time ng-binding">规模:@(item.Scale)个人 <i class="fa fa-cube"></i></span>
                                            <h3 class="timeline-header no-border">
                                                <a>项目描述</a>
                                            </h3>
                                            <div class="timeline-body">
                                                @Html.Raw(item.Describe)
                                            </div>
                                        </div>
                                    </li>
                                    <!-- ngIf: project.projectImgs.length>0 -->
                                    @if (projectEffect.Where(w => w.ProjectId == item.Id).ToList().Count > 0)
                                    {
                                        <li ng-repeat-end="" ng-if="project.projectImgs.length>0" class="ng-scope">
                                            <i class="fa fa-camera bg-purple"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fa fa-photo"></i></span>
                                                <h3 class="timeline-header">
                                                    <a>效果预览</a>
                                                </h3>
                                                <div class="timeline-body">
                                                    <div class="row">
                                                        <div class="col-sm-6 col-md-4 ng-scope" style="width:100%">
                                                            @foreach (var itmeEffect in projectEffect)
                                                            {
                                                                if (item.Id == itmeEffect.ProjectId)
                                                                {
                                                                    <img style="cursor: pointer; height: 150px;float:left" data-original="/@itmeEffect.Path" class="img-responsive thumbnail center-block lazyload" src="/@itmeEffect.Path">
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                    <li class="time-label">
                                        <span class="bg-green">@item.StartTime.Value.ToString("yyyy.MM")</span>
                                    </li>
                                }
                                <li>
                                    <i class="fa fa-clock-o bg-gray"></i>
                                </li>
                            </ul>
                        </div>


