@model MP.Models.Users.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanceL0t</title>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg">欢迎，由此登录</p>
            <form asp-controller="Account" asp-action="Index" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group has-feedback">
                    <input asp-for="Email" value="" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <input asp-for="Password" value="" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8 checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe"> @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                </div>
            </form>
            <div helper-for="All" class="text-danger"></div>
            <div class="social-auth-links text-center">
                <p>- 或者 -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Sign in using
                    Google+
                </a>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <a asp-action="ForgotPassword">忘记密码</a><br>
                </div>
                <div class="col-xs-4">
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-center">立即注册</a>
                </div>
            </div>
        </div>
    </div>
    <div>

    </div>
</body>
</html>
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/plugin/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/plugin/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/plugin/adminlte/css/AdminLTE.css" rel="stylesheet" />
<script src="~/plugin/jquery/jquery.min.js"></script>
<script src="~/plugin/adminlte/js/adminlte.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(function () { 
        sessionStorage.removeItem('menuId');
    })
</script>